{
  "manifest_version": 3,
  "name": "Notion Equation Converter (Inline & Block)",
  "version": "0.1.0",
  "description": "Convert $...$ to inline equations, and provides tools for block equation conversion.",
  
  "permissions": ["activeTab", "scripting", "contextMenus", "storage"],
  "host_permissions": ["https://www.notion.so/*", "https://*.notion.site/*"],
  
  "background": { "service_worker": "background.js" },
  
  "content_scripts": [
    {
      "matches": ["https://www.notion.so/*", "https://*.notion.site/*"],
      "js": ["content.js"],
      "all_frames": true,
      "run_at": "document_idle"
    }
  ],
  
  "commands": {
    "convert_inline_equations": {
      "suggested_key": {
        "default": "Ctrl+M",
        "mac": "Command+Shift+M"
      },
      "description": "Mode 1: Convert $...$ to inline equations"
    },
    "convert_block_equations": {
      "suggested_key": {
        "default": "Ctrl+Shift+B",
        "mac": "Command+Shift+B"
      },
      "description": "Mode 2: Convert single-equation blocks to display equations"
    },
    "convert_inline_to_block": {
      "suggested_key": {
        "default": "Ctrl+Shift+X",
        "mac": "Command+Shift+X"
      },
      "description": "Mode 3: Convert single inline-equation blocks to block equations"
    }
  },
  
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.ico",
      "32": "icons/icon32.ico",
      "48": "icons/icon48.ico",
      "128": "icons/icon128.ico"
    }
  }
}